<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <Id>Kaomi.Core</Id>
    <Title>Kaomi.Core</Title>
    <Version>0.7.0</Version>
    <Authors>carlubian</Authors>
    <Owners>carlubian</Owners>
    <Company>carlubian</Company>
    <PackageReleaseNotes>Plugins have a common naming schema; Minor fixes.</PackageReleaseNotes>
    <PackageProjectUrl>https://github.com/carlubian/Kaomi</PackageProjectUrl>
    <Description>Allows the creation of Kaomi Processes and Servers.</Description>
    <RepositoryUrl>https://github.com/carlubian/Kaomi.git</RepositoryUrl>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <PackageTags>asp-net-core, web-api, dotnet-core3</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="ConfigAdapter" Version="1.2.0" />
    <PackageReference Include="DotNetZip" Version="1.13.0" />
  </ItemGroup>

</Project>
